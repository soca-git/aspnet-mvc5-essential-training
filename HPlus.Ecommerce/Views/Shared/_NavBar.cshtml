
@helper IconBars(int count)
{
    for (int i = 0; i < count; i++)
    {
        <span class="icon-bar"></span>
    }
}

<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                @IconBars(3)
            </button>
            <!-- Url.Action is another example of a html helper. -->
            <!-- It is used to automatically create a URL using the action and controller names. -->
            <!-- Here, the link refers to the Index action of the HomeController. -->
            <a href='@Url.Action("Index", "Home")' class="navbar-brand">
                <div class="hplus-logo"></div>
            </a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <!-- Html.ActionLink is similar to Url.Action in that both helpers automatically create links for their -->
                <!-- respective actions & controllers. In this case, the entire link element is created. -->
                <!-- "Our Products" refers to the text to be used in the content of the link. -->
                <li>@Html.ActionLink("Our Products", "Index", "Product")</li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href='@Url.Action("Index", "Cart")'><i class="fa fa-shopping-cart"></i> Cart</a></li>
            </ul>
        </div>
    </div>
</div>
